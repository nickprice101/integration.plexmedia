{
    "$schema": "http://json-schema.org",
    "$id": "http://yio-remote.com/plexmedia.json",
    "type": "object",
    "title": "YIO Integration Plex Media Schema",
    "description": "Required data points to set up a Plex Media integration.",
    "default": {},
    "additionalProperties": true,
    "examples": [
        {
            "username": "",
            "password": "",
            "server_address": "",
            "server_port": "",
            "entity_id" :""
        }
    ],
    "required": [
        "username",
        "password",
        "server_address",
        "server_port",
        "entity_id"
    ],
    "properties": {
        "username": {
            "$id": "#/properties/username",
            "type": "string",
            "title": "Plex username",
            "description": "Username for the linked Plex account.",
            "default": "",
            "examples": [
                "bob@gmail.com"
            ]
        },
        "password": {
            "$id": "#/properties/password",
            "type": "string",
            "title": "Plex password",
            "description": "Password for the linked Plex account.",
            "default": "",
            "examples": [
                "password"
            ]
        },
        "server_address": {
            "$id": "#/properties/server_address",
            "type": "string",
            "title": "Address of your Plex server",
            "description": "IP of the local Plex server.",
            "default": "",
            "examples": [
                "192.168.1.1"
            ]
        },
        "server_port": {
            "$id": "#/properties/server_port",
            "type": "string",
            "title": "Port of your local Plex server",
            "description": "Port of the local Plex server.",
            "default": "32400",
            "examples": [
                "32400"
            ]
        },
        "entity_id": {
            "$id": "#/properties/entity_id",
            "type": "string",
            "title": "Entity ID",
            "description": "Not user input. A unique entity id.",
            "default": "",
            "examples": [
                "plexmedia.plex",
                "6550f44c-7f11-11ea-bc55-0242ac130003"
            ]
        }
    }
}

